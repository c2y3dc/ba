			var players = [];

			function onYouTubeIframeAPIReady(){
				for(var vid in vids){
					var player = new YT.Player('player' + vid, {
						width: w,
						height: h,
						videoId: vids[vid],
						playerVars: {rel: 0},
						enablejsapi: 1
					});
					players.push(player);
				}
			}
			function stopVideo(i){
				players[i].stopVideo();
			}
